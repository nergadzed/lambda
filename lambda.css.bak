*,
*::before,
*::after {
    /* Borders help but accumulating transparency pronounces stacking of boxes more clearly. Will disable later */
    background-color: #7F7F7F1F;
    border: 1px solid #A0A0A0;
    border-radius: calc(var(--spacing) * 1.333);
    box-sizing: content-box;
    margin: var(--spacing);
    padding: var(--spacing);
    scrollbar-width: none;
}

:root {
    --spacing: 0.5em;
    /* 100% - borders - margins and paddings sizes  */
    width: calc(100% - 2px - var(--spacing) * 4);
    height: calc(100% - 2px - var(--spacing) * 4);

    body {
        width: calc(100% - 2px - var(--spacing) * 4);
        height: calc(100% - 2px - var(--spacing) * 4);
    }
}