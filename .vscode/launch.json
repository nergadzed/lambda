{
    "configurations": [
        {
            "name": "Lambda",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "preLaunchTask": "TypeScript: Watch",
            "program": "${workspaceFolder}/lambda.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "name": "Chrome",
            "preLaunchTask": "TypeScript: Watch",
            "request": "launch",
            "server": {
                "program": "lambda.js",
                "smartStep": true
            },
            "timeout": 20000,
            "type": "chrome",
            "url": "http://localhost:8000",
            "userDataDir": true,
            "webRoot": "${workspaceFolder}"
        }
    ],
    "version": "0.2.0"
}