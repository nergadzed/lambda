{
    "configurations": [
        {
            "name": "Lambda",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "preLaunchTask": "TypeScript: Watch",
            "program": "${workspaceFolder}/lambda.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "name": "Chrome",
            "preLaunchTask": "TypeScript: Watch",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:8000",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "name": "Firefox",
            "url": "http://localhost:8000/",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "Setup"
        }
    ],
    "version": "0.2.0"
}